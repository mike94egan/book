<body class="bookswap-body">
    <div class="register-bookswap-icon pt-30">
        <img class="register-logo" src="img/bookswap_vert.png" alt="Icon">
    </div>
    
    <div class="form-container">
        <h1 class="title pb-20"><b>Forgot Password</b></h1>
        {{#if errors}} {{#each errors}}
        <div class="alert alert-danger" role="alert">
            {{this.msg}}
        </div>
        {{/each}} {{/if}} {{#if dbError}}
        <div class="alert alert-danger" role="alert">
            {{dbError}}
        </div>
        {{/if}}

        <div class="form-container">
            <form>
                <div class="form-group">
                    <input type="text" class="register-bookswap-textField" id="username" required name="username" placeholder="Username">
                </div>

                <div class="form-group">
                    <input type="email" class="register-bookswap-textField" id="email" required name="email" placeholder="name@domain.com">
                </div>
                <div class="text-center pt-15 mb-40">
                    <button type="submit" class="btn sign-in-button btn-lg" id="round">Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>